<div class="container mt-4">
  <h1 class="text-center">Lesson show result</h1>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="row">
        <div class="col-lg-6">
          <h3>
            Category:
            <%= @category.name %></h3>
        </div>
        <div class="col-lg-6">
          <h3 class="text-right text-muted">
            Result:
            <%= @lesson.words.count %>
            <%= @lesson.result %>
          </h3>
        </div>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Word</th>
            <th>Answer</th>
            <th>Correct</th>
          </tr>
        </thead>
        <tbody>
          <% @lesson.lesson_words.each do |lesson_word| %>
            <tr>
              <td><%= lesson_word.word.content %></td>
              <td><%= lesson_word.word_answer&.content %></td>
              <td>
                <% if lesson_word.word_answer&.correct == true %>
                  <i class="fas fa-check" style="font-size: 3em; color: #40ff00;"></i>
                <% else %>
                  <i class="fa fa-times" style="font-size: 3em; color: #ff0000;"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col-lg-9">
          <%= link_to "Home", root_path, class: 'btn btn-info' %>
        </div>
        <div class="col-lg-3">
          <%= link_to "Back", lesson_path(@lesson), class: 'btn btn-info pull-right' %>
        </div>
      </div>
    </div>
  </div>
</div>
