<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-lg-9">
          <h3 class="text-center">Admin | Word: <%= @word.content %></h3>
        </div>

        <div class="col-lg-3">
          <%= link_to "Edit", edit_admin_word_path, class: 'btn btn-primary' %>
          <%= link_to "Delete",admin_word_path,  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %>
        </div>
      </div>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Content</th>
          <th>Creation time</th>
          <th>Update time</th>
          <th>Answer Correct</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @word_answers.each do |word_answers| %>
          <tr>
            <td><%= word_answers.content %></td>
            <td><%= word_answers.created_at %></td>
            <td><%= word_answers.updated_at %></td>
            <td><%= word_answers.correct %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><br>
  <div class="col-lg-13">
    <%= link_to "Categories List", admin_categories_path, class: 'btn btn-info pull-right' %>
    <%= link_to "Back", admin_words_path, class: 'btn btn-info pull-right' %>
  </div>
</div>
