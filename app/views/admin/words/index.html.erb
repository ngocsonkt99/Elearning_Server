<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-lg-12">
          <h3 class="text-center"> Admin | List Words </h3>
        </div>
      </div>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Content</th>
          <th>Creation time</th>
          <th>Update time</th>
          <th>Answer Correct</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td><%= link_to(word.content, admin_word_path(word)) %></td>
            <td><%= word.created_at %></td>
            <td><%= word.updated_at %></td>
            <td><%= word.correct_answer&.content %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><br>
  <div class="col-lg-13">
    <%= link_to "Add New Word", new_admin_word_path, class: 'btn btn-info pull-right' %>
    <%= link_to "Back", admin_root_path, class: 'btn btn-info pull-right' %>
  </div>
</div>
