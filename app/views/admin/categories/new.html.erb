<div class="container">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <h1 class="text-center">Create Categories</h1>
      <%= form_for Category.new ,url: admin_categories_path do |f| %>

        <div class="form-group">
          <%= f.label:name %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'enter category name' %>
        </div>

        <div class="text-center">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div><br>
      <% end %>
      <%= link_to 'Home Admin', admin_root_path, class: 'btn btn-info pull-right' %>
      <%= link_to "Back", admin_categories_path, class: 'btn btn-info pull-right' %>
    </div>
  </div>
</div>
