<% provide(:title, 'Edit category') %>
<% provide(:button_text, 'Save') %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Admin | Update Category</h1>
      <%= form_for([:admin, @category]) do |f| %>
        <%= render 'shared/errors_messages', object: f.object %>

        <div class="form-group row">
          <label for="staticName" class="col-sm-2 col-form-label">Category Name</label>

          <div class="col-sm-10">
            <%= f.text_field :name, class:'form-control', placeholder: "Enter category's name" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "Update Category", class: 'btn btn-primary' %>
        </div>

        <div class="col-lg-13">
          <%= link_to "Back", admin_categories_path, class: 'btn btn-info pull-right' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
