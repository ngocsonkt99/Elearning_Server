<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-lg-12">
          <h3 class="text-center">
            Admin | List Categories
          </h3>
        </div>
      </div>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Category</th>
          <th>Number of words</th>
          <th>Creation time</th>
          <th>Update time</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to(category.name, admin_category_path(category)) %></td>
            <td><%= category.words.count %></td>
            <td><%= category.created_at %></td>
            <td><%= category.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><br>
  <div class="col-lg-13">
    <%=link_to 'Create New Category',new_admin_category_path, class: "btn btn-info pull-right" %>
    <%= link_to 'Back', admin_root_path, class: 'btn btn-info pull-right' %>
  </div>
</div>
